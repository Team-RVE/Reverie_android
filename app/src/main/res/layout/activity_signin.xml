<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="FAF9F6"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/linearlayout_signin"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <TextView
            android:id="@+id/tv_signin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="로그인"
            android:textStyle="bold"
            android:textColor="#4E2D0C"
            android:textSize="30sp"
            android:layout_marginTop="100dp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이메일"
            android:textSize="14dp"
            android:textStyle="bold"
            android:textColor="#4E2D0C"
            android:layout_marginTop="40dp"/>

        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="@android:color/transparent"
            android:textColor="#4E2D0C"/>

        <View
            android:id="@+id/view_email"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#6A4A35"/>

        <TextView
            android:id="@+id/tv_email_toast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="사용 불가능한 이메일입니다."
            android:textColor="#FF1010"
            android:textSize="12dp"
            android:visibility="gone"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/tv_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호"
            android:textSize="14dp"
            android:textStyle="bold"
            android:textColor="#4E2D0C"
            android:layout_marginTop="40dp"/>

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="@android:color/transparent"
            android:textColor="#4E2D0C"
            android:drawableEnd="@drawable/open_eye"
            android:drawablePadding="8dp"
            android:paddingEnd="12dp"
            android:drawableTint="#4E2D0C"/>

        <View
            android:id="@+id/view_password"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#6A4A35"/>

        <TextView
            android:id="@+id/tv_pw_toast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호가 일치하지 않습니다."
            android:textColor="#FF1010"
            android:textSize="12dp"
            android:visibility="gone"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/auto_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="자동 로그인"
            android:textColor="#4E2D0C"
            android:textStyle="bold"
            android:textSize="12dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="end"
            android:drawableStart="@drawable/check_1"
            android:drawablePadding="6dp"
            android:drawableTint="#4E2D0C"/>

        <Button
            android:id="@+id/button_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="로그인"
            android:backgroundTint="#4E2D0C"
            android:layout_marginTop="28dp"/>

        <TextView
            android:id="@+id/tv_go_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="계정이 없으신가요? 회원가입"
            android:textColor="#000000"
            android:textSize="14dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"/>
    </LinearLayout>
</ScrollView>